<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
    <!--定义表单视图-->
        <record model="ir.ui.view" id="canyou_parents_form_view">
            <field name="name">家长表单</field>
            <field name="type">form</field>
            <field name="model">canyou.parents</field>
            <field name="arch" type="xml">
                <form string="新增家长" version="7.0">
                  <group>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="address"/>
                    <field name="telephone"/>
                    <field name="student"/>
                 </group>
                </form>
            </field>
        </record>
        <!--定义列表视图-->
        <record model="ir.ui.view" id="canyou_parents_tree_view">
            <field name="name">家长列表</field>
            <field name="type">tree</field>
            <field name="model">canyou.parents</field>
            <field name="arch" type="xml">
                <tree string="家长列表" version="7.0">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="address"/>
                    <field name="telephone"/>
                </tree>
            </field>
        </record>
<!--定义视图动作-->
    <record model="ir.actions.act_window"  id="action_canyou_parents">
        <field name="name">家长列表</field>
        <field name="res_model">canyou.parents</field>
        <field name="view_type">form</field>
        <field name="view_mode">form,tree</field>
        <field name="view_id" eval="False"/>
    </record>
<!--定义菜单-->
    <menuitem id="canyou_parents_manage" name="家长管理"/>
    <menuitem id="canyou_parents_slide" name="家长管理" parent="canyou_parents_manage"/>
    <menuitem id="canyou_parents_slide_all"
              name="家长列表"
              parent="canyou_parents_slide"
              action="action_canyou_parents"/>
</data>
</openerp>